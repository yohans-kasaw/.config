{
    "position": "top",
    "height": 30,
    "spacing": 4,
    "modules-left": [
        "network",
        "battery",
        "cpu",
        "memory",
    ],
    "modules-center": ["hyprland/workspaces"],
    "modules-right": [
        "clock",
        "power-profiles-daemon",
        "pulseaudio",
        "tray"
    ],

    "hyprland/workspaces": {
        "disable-scroll": true,
        "warp-on-scroll": false,
        "format": "{icon}  {id}",
        "format-icons": {
            "3": "temp",
            "4": "llm",
            "5": "craft",
            "6": "read",
            "7": "test",
            "8": "run",
            "9": "slack",
            "10": "note",
            "urgent": "ÔÅ™",
            "default": ""
        },
        "active-only": false,
        "all-outputs": false
    },

    "clock": {
        "format": "{:%I:%M %p - %a, %d %b %Y}"

    },

    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "<span >{icon}  </span>{capacity}%",
        "format-warning": "<span >{icon}  </span> {capacity}%",
        "format-critical": "<span >{icon}  </span> {capacity}%",
        "format-charging": "<span >Ôá¶  </span>{capacity}%",
        "format-plugged": "<span >Ôá¶  </span>{capacity}%",
        "format-alt": "<span >{icon}  </span>{time}",
        "format-full": "<span >Û±ä¶  </span>{capacity}%",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
        "tooltip-format": "{time}"
    },

    "network": {
        "format-wifi": "{essid}  | {ipaddr}/{cidr}",
        "format-ethernet": "eth",
        "format-disconnected": "Disconnected",
        "interval": 1
    },

    "pulseaudio": {
        "format": "vol {volume}%",
        "format-muted": "üîá",
        "on-click": "pavucontrol"
    },

    "tray": {
        "spacing": 10
    },

    "cpu": {
        "format": "cpu {usage}%",
    },

    "memory": {
        "format": "Mem {used:0.1f}GB",
    }
}
